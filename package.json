{
  "name": "qwikcity-boilerplate",
  "description": "Demo App with Routing built-in (recommended)",
  "engines": {
    "node": "^18.17.0 || ^20.3.0 || >=21.0.0"
  },
  "engines-annotation": "Mostly required by sharp which needs a Node-API v9 compatible runtime",
  "private": true,
  "trustedDependencies": [
    "better-sqlite3",
    "es5-ext",
    "esbuild",
    "lefthook",
    "sharp"
  ],
  "trustedDependencies-annotation": "Needed for bun to allow running install scripts",
  "type": "module",
  "scripts": {
    "build": "qwik build",
    "build.client": "vite build",
    "build.preview": "vite build --ssr src/entry.preview.tsx",
    "build.server": "vite build -c adapters/cloudflare-pages/vite.config.ts",
    "build.types": "tsc --incremental --noEmit",
    "db:migrate": "drizzle-kit generate:sqlite && rm -rf .mf || true && mkdir -p ./.mf/d1/DB && touch ./.mf/d1/DB/db.sqlite && drizzle-kit push:sqlite",
    "db:seed": "$npm_execpath run db:migrate && $npm_execpath run ./db/seed.ts",
    "deploy": "wrangler pages deploy ./dist",
    "dev": "vite --mode ssr",
    "dev.debug": "node --inspect-brk ./node_modules/vite/bin/vite.js --mode ssr --force",
    "lint": "biome check --write ./src && biome format ./src --write",
    "start": "vite --open --mode ssr",
    "test": "$npm_execpath test src/services/ && $npm_execpath test src/domains/*.test.ts && $npm_execpath test src/utils/*.test.ts",
    "type": "tsc -p ./tsconfig.json",
    "qwik": "qwik"
  },
  "dependencies": {
    "cuid": "^3.0.0",
    "drizzle-orm": "^0.29.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.2",
    "@builder.io/qwik": "^1.5.7",
    "@builder.io/qwik-auth": "0.2.2",
    "@builder.io/qwik-city": "^1.5.7",
    "@builder.io/vite-plugin-macro": "^0.0.7",
    "@cloudflare/workers-types": "^4.20240620.0",
    "@faker-js/faker": "^8.4.1",
    "@types/node": "^20.12.7",
    "better-sqlite3": "^9.6.0",
    "bun-types": "^1.1.17",
    "drizzle-kit": "^0.20.18",
    "fishery": "^2.2.2",
    "lefthook": "^1.6.18",
    "prettier": "^3.2.5",
    "typescript": "5.4.5",
    "undici": "*",
    "vite": "^5.2.10",
    "vite-tsconfig-paths": "^4.2.1",
    "zx": "^8.1.3"
  }
}
